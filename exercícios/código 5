int buttonPin = 7;
int ledPin = 10;
int estadoButton = 0;

void setup(){
  pinMode(ledPin , OUTPUT);
  pinMode(buttonPin , INPUT);
}

void loop(){
  estadoButton = digitalRead(buttonPin);
  if (estadoButton == LOW) {
   piscaLed ();
  }
  else { 
  (estadoButton == HIGH);
    desligaLed ();
  }
}
void piscaLed ()
{
 digitalWrite (ledPin, HIGH);
 delay (1000);
}
void desligaLed ()
{
  digitalWrite (ledPin, LOW);
}
